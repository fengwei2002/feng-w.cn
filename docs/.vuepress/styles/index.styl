.sw-update-popup{
    position: fixed;
    border: 1px solid #3eaf7c;
    border-radius: 3px;
    background-color: rgba(255,255,255,.9) !important;
    box-shadow: 0 4px 16px rgba(0,0,0,.5);
}

.sw-update-popup>button {
  z-index: 1;
  position: relative;
  font-size: inherit;
  font-family: inherit;
  color: white;
  padding: 0.5em 1em;
  outline: none;
  border: none;
  background-color: hsl(236, 32%, 26%);
}

.sw-update-popup>button:hover {
  cursor: pointer;
}

.sw-update-popup>button::before {
  content: '';
  z-index: -1;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border: 4px solid hsl(236, 32%, 26%);
  transform-origin: center;
  transform: scale(1);
}

.sw-update-popup>button:hover::before {
  transition: all 0.75s ease-in-out;
  transform-origin: center;
  transform: scale(1.75);
  opacity: 0;
}

