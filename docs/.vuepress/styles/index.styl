// 鼠标指针
body
  cursor: url('/pointer/default.cur'), auto;
body
  .header
    .banner
      cursor: url('/pointer/default.cur'), auto;
.container
  aside
    .info-card
      .info-card-body
        cursor: url('/pointer/default.cur'), auto;
a, button, #goTop, .jump, h1, .info-avatar, .post-tag
  cursor: url('/pointer/link.cur'), auto;

//标题美化
.header
  .banner
    .container
      h1
        font-family: 'Baloo Paaji 2', cursive;
        color: #FAFAFA;
        text-shadow: 0px 0px 28px black;
.navbar .navbar-site-name {
    font-family: 'Baloo Paaji 2', cursive;
    color: #24292e !important;
    font-size: 1.3rem !important;
}
.navbar .navbar-link {
    font-family: 'Baloo Paaji 2', cursive;
    color: #24292e !important;
    font-size: 1.3rem;
}

// 宽屏隐藏原有返回顶部按钮
@media screen and (min-width: 960px)
  .go-to-top
    display none;

//文字选中效果
p::selection {
    background:#cccccce3;
    color:#000000;
}
p::-moz-selection {
    background:#cccccce3;
    color:#000000;
}
p::-webkit-selection {
    background:#cccccce3c;
    color:#000000;
}

//全局背景颜色的修改
html, body {
    background-color: #2F2A2A;//footer部分的背景颜色
}

/*滚动条效果-start*/
::-webkit-scrollbar {
    width:3px; 
    height:3px; 
}
.sidebar::-webkit-scrollbar {
    width: 3px;
    height: 3px;
}
::-webkit-scrollbar-thumb {
    background-image: linear-gradient(45deg, Cyan 0%, Magenta 50%, Yellow 100%);
}
/*滚动条效果-end*/

//添加圆角
blockquote {
    background:#F3F4F4 !important;
    color:#000000 !important;
}
.content img {
   -webkit-border-radius: 13px !important;
}
.header {
   -webkit-border-radius: 10px !important;
}
.banner {
   -webkit-border-radius: 10px !important;
}
//头像区添加阴影
.info-card .info-card-header .info-avatar{
  box-shadow: 0 0 10px #6a737d !important;
}

//去除白色边框
.banner {
    border-bottom: 0px solid #eaecef !important;
}
.footer {
    padding-bottom: 1.5rem;
    text-align: center;
    border-top: 0px solid #eaecef !important;
}

//个人信息文字
.info-card .info-card-body .info-nickname {
    font-size: 1.6rem;
    font-family: 'Baloo Paaji 2', cursive;
}
.info-card .info-card-body .info-desc {
    font-size: 1rem;
    font-family: 'Baloo Paaji 2', cursive;
}
.info-card .info-card-body .info-contact{
    font-size: 1rem;
    font-family: 'Baloo Paaji 2', cursive;
}