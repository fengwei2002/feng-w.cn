// 鼠标指针
body
  cursor: url('/pointer/default.cur'), auto;
body
  .header
    .banner
      cursor: url('/pointer/default.cur'), auto;
.container
  aside
    .info-card
      .info-card-body
        cursor: url('/pointer/default.cur'), auto;
a, button, #goTop, .jump, h1, .info-avatar, .post-tag
  cursor: url('/pointer/link.cur'), auto;

// 标题
.header
  .banner
    .container
      h1
        color: #edebdf;
        text-shadow: 1px 2px 20px black;
// 隐藏原有返回顶部按钮
.go-to-top
  display none

//文字选中效果
p::selection {
    background:#cccccce3;
    color:#000000;
}
p::-moz-selection {
    background:#cccccce3;
    color:#000000;
}
p::-webkit-selection {
    background:#cccccce3c;
    color:#000000;
}

//全局背景颜色的修改
html, body {
    background-color: #232323;//footer部分的背景颜色
}

/*滚动条效果-start*/
::-webkit-scrollbar {
    width:3px; 
    height:3px; 
}
.sidebar::-webkit-scrollbar {
    width: 4px;
    height: 12px;
}
::-webkit-scrollbar-thumb {
    background-image: linear-gradient(45deg, Cyan 0%, Magenta 50%, Yellow 100%);
}
/*滚动条效果-end*/

//添加圆角
blockquote {
    background:#F3F4F4;
    color:#000000 !important;
   -webkit-border-radius: 13px;
}
.content img {
   -webkit-border-radius: 13px;
}